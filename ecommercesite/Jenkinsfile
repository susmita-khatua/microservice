pipeline {
    agent any

    tools {
        maven 'Maven-3.9'
        jdk 'JDK-17'
    }

    environment {
        DOCKER_REGISTRY = 'your-registry.com'
        DOCKER_CREDENTIALS = credentials('docker-registry-credentials')
        SONAR_TOKEN = credentials('sonar-token')
        APP_VERSION = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building all modules...'
                sh 'mvn clean install -DskipTests -B'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running JUnit 5 tests...'
                sh 'mvn test -B'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    jacoco(
                        execPattern: '**/target/jacoco.exec',
                        classPattern: '**/target/classes',
                        sourcePattern: '**/src/main/java'
                    )
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'Running SonarQube analysis...'
                withSonarQubeEnv('SonarQube') {
                    sh '''
                        mvn sonar:sonar \
                            -Dsonar.projectKey=ecommerce-microservices \
                            -Dsonar.projectName="E-Commerce Microservices" \
                            -Dsonar.java.coveragePlugin=jacoco \
                            -Dsonar.coverage.jacoco.xmlReportPaths=**/target/site/jacoco/jacoco.xml
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                echo 'Building Docker images...'
                script {
                    def services = [
                        'discovery-server', 'config-server', 'api-gateway',
                        'auth-service', 'product-service', 'inventory-service',
                        'order-service', 'payment-service', 'aggregation-service'
                    ]

                    services.each { service ->
                        sh "docker build -t ${DOCKER_REGISTRY}/${service}:${APP_VERSION} -f ${service}/Dockerfile ."
                        sh "docker tag ${DOCKER_REGISTRY}/${service}:${APP_VERSION} ${DOCKER_REGISTRY}/${service}:latest"
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                echo 'Pushing Docker images to registry...'
                script {
                    docker.withRegistry("https://${DOCKER_REGISTRY}", 'docker-registry-credentials') {
                        def services = [
                            'discovery-server', 'config-server', 'api-gateway',
                            'auth-service', 'product-service', 'inventory-service',
                            'order-service', 'payment-service', 'aggregation-service'
                        ]

                        services.each { service ->
                            sh "docker push ${DOCKER_REGISTRY}/${service}:${APP_VERSION}"
                            sh "docker push ${DOCKER_REGISTRY}/${service}:latest"
                        }
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to environment...'
                sh 'docker-compose down || true'
                sh 'docker-compose up -d'

                // Wait for services to be healthy
                sh '''
                    echo "Waiting for services to start..."
                    sleep 30
                    curl -f http://localhost:8761/actuator/health || echo "Eureka not ready yet"
                    curl -f http://localhost:8080/actuator/health || echo "Gateway not ready yet"
                '''
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
